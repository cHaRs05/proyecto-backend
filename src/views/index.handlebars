<section class="max-w-7xl mx-auto p-10">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {{#each products}}
            <div class="bg-white p-6 rounded-2xl shadow-lg border border-gray-100 flex flex-col">
                <h3 class="text-xl font-black text-gray-800 mb-2 uppercase">{{this.title}}</h3>
                <p class="text-gray-500 text-sm mb-4 flex-grow">{{this.description}}</p>
                
                <div class="flex justify-between items-center mb-6">
                    <span class="text-2xl font-black text-indigo-600">${{this.price}}</span>
                    <span class="text-xs font-bold px-2 py-1 bg-indigo-50 text-indigo-500 rounded uppercase">
                        {{this.category}}
                    </span>
                </div>

                <button onclick="agregarProducto('{{this._id}}')" 
                        class="w-full bg-indigo-600 text-white font-bold py-3 rounded-xl hover:bg-indigo-700 transition active:scale-95 shadow-md">
                    AGREGAR AL CARRITO
                </button>
            </div>
        {{else}}
            <div class="col-span-3 text-center py-20">
                <h2 class="text-2xl font-bold text-gray-400">Lo sentimos, no pudimos mostrar los productos.</h2>
                <p class="text-gray-400">Verifica que la variable en el Router se llame 'products'.</p>
            </div>
        {{/each}}
    </div>
</section>